{% assign day = 86400  %}
{% assign dayIncrement = day | times: block.settings.date  %}
<p>{{ block.settings.text }} <strong>{{ "now" | date: "%B %-d"  }} - {{'now' | date: "%s" | plus : dayIncrement | date: "%B %-d" }}</strong></p>
{% schema %}
{
  "name": "t:sections.main_product.name",
  "class": "shopify-section--main-product",
  "tag": "section",
  "settings": [
   
  ],
  "blocks": [
    {
      "type": "order-to-receive",
      "name": "Order to receive",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text",
          "default": "Order now to receive"
        },
        {
          "type": "range",
          "id": "date",
          "min": 1,
          "max": 30,
          "step": 1,
          "unit": "Day",
          "label": "Deliver date",
          "default": 5
        }
      ]
    }
  ]
}
{% endschema %}
